<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval" >
            <corners android:radius="90dp"/>
            <solid android:color="#fff" />
            <size android:width="170dp" android:height="170dp"/>
        </shape>
    </item>

    <item android:bottom="6dp" android:right="6dp" android:top="6dp" android:left="6dp" >
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_pressed="true">
                <shape android:shape="oval" >
                    <corners android:radius="90dp"/>
                    <solid android:color="#2c6dc2" />
                    <size android:width="162dp" android:height="162dp"/>
                </shape>
            </item>

            <item>
                <shape android:shape="oval" >
                    <corners android:radius="90dp"/>
                    <solid android:color="#4e8Fe4" />
                    <size android:width="162dp" android:height="162dp"/>
                </shape>
            </item>

        </selector>
    </item>

</layer-list>